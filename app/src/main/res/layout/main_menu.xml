<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FBFF">

    <View
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:background="@mipmap/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/view"/>

    <ImageView
            android:layout_width="83dp"
            android:layout_height="70dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/usericon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imageView"/>

    <TextView
            android:text="Selamat Datang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/textView" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="@+id/view"/>
    <TextView
            android:text="TextView"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edNama" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/qrcodelogo"
            android:id="@+id/imageButton3"
            android:onClick="QRcode" android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/view"
            android:layout_marginStart="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp"/>
    <TextView
            android:text="Absen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="68dp" android:layout_marginStart="68dp"/>
    <TextView

            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edLogout" android:text="Logout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view" android:onClick="Logout"/>


    <!--<TextView-->
        <!--android:layout_width=""-->
        <!--android:layout_height="" />-->
    <!--<TextView-->
        <!--android:layout_width=""-->
        <!--android:layout_height="" />-->

</android.support.constraint.ConstraintLayout>
